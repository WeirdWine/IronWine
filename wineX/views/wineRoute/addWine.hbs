<h3>Hello Motto</h3>
<div class="addWineWrapper">
<form action="/addWine" method="POST" enctype="multipart/form-data">
  <label for="winename">Name of wine:</label>
  <input type="text" name="winename" id="winename">

  <label for="year">Year:</label>
  <input type="text" name="year" id="year">

  <label for="price">Price:</label>
  <input type="text" name="price" id="price">

  <label for="colour">Colour:</label>
<select id="colour" name="colour" form="colour">
  <option value="red">red</option>
  <option value="white">white</option>
  <option value="rose">rose</option>
  <option value="orange">orange</option>
</select>

 <label>
    Bio:
    <select  name="bio" id="bio">
      <option value="">---</option>
      <option value="true">Yes</option>
      <option value="false">No</option>
    </select>
  </label>

   <label for="country">Country:</label>
  <input type="text" name="country" id="country">

<!--
   <label for="shop">Shop:</label>
  <input type="text" name="shop" id="shop">
-->

<label for="photo">Wine Snap: </label>
  <input type="file" name="photo" id="photo">

<label for="rating">Rating:</label>
  <input type="number" name="rating" id="rating" min="1" max="5">

    <label for="comment">Impression:</label>
  <input type="text" name="comment" id="comment">

  <button type="submit">Add Wine</button>

</form>
</div>
